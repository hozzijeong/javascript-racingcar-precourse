{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "airbnb",
        "plugin:cypress/recommended",
        "prettier"
    ],
    "plugins": ["prettier"],
    "rules": {
        "import/prefer-default-export": "off",
        "import/extensions": ["off"],
        "class-methods-use-this": "off",
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "semi": true,
                "useTabs": false,
                "tabWidth": 2,
                "trailingComma": "all",
                "printWidth": 100,
                "bracketSpacing": true,
                "arrowParens": "avoid",
                "endOfLine": "auto"
            }
        ]
    }
}
